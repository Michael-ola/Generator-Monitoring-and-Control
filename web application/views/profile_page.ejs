                        <option>start</option>
                        <option>stop</option>
                    </select>
                    <button id="save_time_input">OK</button>
                </div>
                <select id="plot-year">
                    <% year.forEach((year)=>{%>
                        <option><%=year%></option>
                    <%})%>
                </select>

                <div>
                    <canvas id="gauge"></canvas>
                </div>

                <div>
                    <canvas id="myChart"></canvas>
                </div>
   			</div>
   		</div>
   </main>
   <footer></footer>
